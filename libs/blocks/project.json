{
  "name": "blocks",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/blocks/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "assets": [
          {
            "glob": "libs/blocks/README.md",
            "input": ".",
            "output": "."
          }
        ],
        "compiler": "swc",
        "entryFile": "libs/blocks/src/index.ts",
        "external": ["react/jsx-runtime", "react", "react-dom"],
        "extractCss": false,
        "format": ["esm", "cjs"],
        "outputPath": "dist/libs/blocks",
        "project": "libs/blocks/package.json",
        "rollupConfig": "@nx/react/plugins/bundle-rollup",
        "tsConfig": "libs/blocks/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/blocks/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/blocks/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/blocks/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "configDir": "libs/blocks/.storybook",
        "outputDir": "dist/storybook/blocks"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "cd dist/libs/blocks && npm publish --tag=latest --access public "
      }
    }
  }
}
