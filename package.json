{
  "name": "bjeco",
  "description": "https://bje.co",
  "version": "0.1.0",
  "private": true,
  "repository": "https://github.com/brianespinosa/bjeco.git",
  "license": "MIT",
  "engines": {
    "node": "^14.5.0"
  },
  "dependencies": {
    "history": "5.0.0",
    "node-sass": "4.14.1",
    "normalize.css": "8.0.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-router-dom": "6.0.0-beta.0",
    "react-scripts": "3.4.1",
    "typescript": "3.9.7"
  },
  "devDependencies": {
    "@bjeco/eslint-config": "*",
    "@bjeco/prettier-config": "*",
    "@testing-library/dom": "7.21.5",
    "@testing-library/jest-dom": "5.11.1",
    "@testing-library/react": "10.4.7",
    "@testing-library/user-event": "12.0.15",
    "husky": "1.3.1",
    "jest-junit": "11.1.0",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5"
  },
  "eslintConfig": {
    "extends": "@bjeco"
  },
  "prettier": "@bjeco/prettier-config",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint ./"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx,html,css,scss}": [
      "prettier --write"
    ]
  }
}
