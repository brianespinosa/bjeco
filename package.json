{
  "name": "bjeco",
  "version": "0.1.0",
  "private": true,
  "description": "https://bje.co",
  "repository": "https://github.com/brianespinosa/bjeco.git",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "lint": "eslint ./",
    "serve": "next start",
    "start": "next dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,scss,sass,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx,html}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": "@bjeco/prettier-config",
  "eslintConfig": {
    "extends": "@bjeco",
    "rules": {
      "react/react-in-jsx-scope": "off"
    }
  },
  "stylelint": {
    "extends": "@bjeco/stylelint-config"
  },
  "dependencies": {
    "antd": "4.6.3",
    "next": "9.5.5",
    "node-sass": "4.14.1",
    "normalize.css": "8.0.1",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@bjeco/eslint-config": "1.3.0",
    "@bjeco/prettier-config": "latest",
    "@bjeco/stylelint-config": "latest",
    "@testing-library/dom": "7.21.5",
    "@testing-library/jest-dom": "5.11.1",
    "@testing-library/react": "10.4.7",
    "@testing-library/user-event": "12.0.15",
    "eslint": "7.7.0",
    "eslint-plugin-jest": "23.20.0",
    "eslint-plugin-json-format": "2.0.1",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-react": "7.20.6",
    "eslint-plugin-react-hooks": "4.1.0",
    "eslint-plugin-unicorn": "19.0.1",
    "husky": "1.3.1",
    "jest": "26.4.2",
    "jest-junit": "11.1.0",
    "lint-staged": "10.2.11",
    "sass": "1.26.10"
  },
  "engines": {
    "node": "12.x"
  }
}
